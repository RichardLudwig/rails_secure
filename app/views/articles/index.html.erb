<h1>Articles</h1>
<section id="articles" class="container-fluid gallery bg-faded">
  <% if current_user %>
    <div class="text-center"><%= link_to 'New Article', new_article_path, class: 'btn btn-success btn-md' %></div>
    <br>
  <% end %>

  <div class="album py-5">
    <div class="card-columns">
      <% @articles.each do |article| %>
      <div class="card text-center">
        <div class="card-body">
          <p class="card-text"><%= link_to article.title, article %></p>
          <p><%= article.created_at.strftime("%b. %d %Y") %> </p>
          <% if current_user %>
            <div class="row">
              <div class="col text-center">
                <button type="button" name="button" class="btn btn-md btn-warning" style="border: none; border-radius: 0;">
                  <%= link_to 'Edit', edit_article_path(article), style: 'color: white;' %>
                </button>
                <button type="button" name="button" class="btn btn-md btn-danger" style="border: none; border-radius: 0;">
                  <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, style: 'color: white;' %>
                </button>
              </div>
              </div>
            <% end %>
        </div>
      </div>
      <% end %>
    </div>
  </div>

</section>
