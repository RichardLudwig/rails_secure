<%= form_with(model: message, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control', :required => true %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: 'form-control', :required => true %>
  </div>

  <div class="form-group">
    <%= form.label :message %>
    <%= form.text_area :message, class: 'form-control', :required => true %>
  </div>

  <div class="actions">
    <div class="form-group">
      <%= form.submit 'Send', class: 'btn btn-primary btn-block' %>
    </div>
  </div>
<% end %>
