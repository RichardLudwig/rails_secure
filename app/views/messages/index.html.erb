<h1>Messages</h1>

<%= render 'layouts/message_search_form' %> 

<div class="col-md-3">
  <table class="table table-striped table-fit">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Message</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @messages.each do |message| %>
        <tr scope="row">
          <td><%= sanitize message.name %></td>
          <td><%= sanitize message.email.truncate(10) %></td>
          <td><%= sanitize message.message.truncate(30) %></td>
          <td><%= link_to 'Show', message, class: 'btn btn-warning btn-block' %>
          <%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-block' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>